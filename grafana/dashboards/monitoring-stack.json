{
  "dashboard": {
    "title": "Monitoring Stack Overview",
    "tags": ["monitoring", "infrastructure", "stack"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Prometheus Uptime",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"prometheus\"}",
            "legendFormat": "Prometheus"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Alertmanager Uptime",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"alertmanager\"}",
            "legendFormat": "Alertmanager"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Active Alerts",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "count(ALERTS{alertstate=\"firing\"})",
            "legendFormat": "Firing"
          }
        ]
      },
      {
        "id": 4,
        "title": "Prometheus Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"prometheus\"} / 1024 / 1024 / 1024",
            "legendFormat": "Memory (GB)"
          }
        ]
      },
      {
        "id": 5,
        "title": "Prometheus CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"prometheus\"}[5m]) * 100",
            "legendFormat": "CPU %"
          }
        ]
      },
      {
        "id": 6,
        "title": "Targets Status",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "up",
            "format": "table",
            "instant": true
          }
        ]
      },
      {
        "id": 7,
        "title": "Scrape Duration",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "prometheus_target_interval_length_seconds",
            "legendFormat": "{{job}}"
          }
        ]
      },
      {
        "id": 8,
        "title": "Storage Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "prometheus_tsdb_storage_blocks_bytes / 1024 / 1024 / 1024",
            "legendFormat": "Storage (GB)"
          }
        ]
      }
    ]
  }
}








