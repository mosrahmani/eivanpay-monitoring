        },
        {
          "expr": "rate(pg_stat_database_tup_updated{datname=\"eivan_pay\"}[5m])",
          "legendFormat": "Updates",
          "refId": "B"
        },
        {
          "expr": "rate(pg_stat_database_tup_deleted{datname=\"eivan_pay\"}[5m])",
          "legendFormat": "Deletes",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "ops"
        }
      }
    },
    {
      "id": 9,
      "title": "Dead Tuples",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "pg_stat_user_tables_n_dead_tup{datname=\"eivan_pay\"}",
          "legendFormat": "{{schemaname}}.{{relname}}",
