    {
      "id": 5,
      "title": "Container CPU Usage (Top 10)",
      "type": "bargauge",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "topk(10, sum(rate(container_cpu_usage_seconds_total{name!=\"\"}[5m])) by (name) * 100)",
