{
  "id": null,
  "uid": "system-overview",
  "title": "üéØ System Overview - Real-time",
  "tags": ["overview", "main", "dashboard"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "5s",
  "editable": true,
  "gnetId": null,
  "graphTooltip": 1,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
  },
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "title": "üñ•Ô∏è Server Health Score",
      "type": "gauge",
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "100 - (\n  (100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)) * 0.3 +\n  ((1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100) * 0.3 +\n  ((1 - (node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"})) * 100) * 0.2 +\n  (node_load5 / count(count(node_cpu_seconds_total) by (cpu)) * 100) * 0.2\n)",
          "legendFormat": "Health Score",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "red"},
              {"value": 50, "color": "orange"},
              {"value": 70, "color": "yellow"},
              {"value": 85, "color": "green"}
            ]
          }
        }
      },
      "options": {
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      }
    },
    {
      "id": 2,
      "title": "üíæ Database Health Score",
      "type": "gauge",
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "100 * (\n  (sum(pg_stat_database_blks_hit{datname=\"eivan_pay\"}) / (sum(pg_stat_database_blks_hit{datname=\"eivan_pay\"}) + sum(pg_stat_database_blks_read{datname=\"eivan_pay\"}))) * 0.4 +\n  (1 - (pg_stat_activity_count{datname=\"eivan_pay\",state=\"active\"} / 100)) * 0.3 +\n  (up{job=\"postgres\"}) * 0.3\n)",
          "legendFormat": "DB Health",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "red"},
              {"value": 50, "color": "orange"},
              {"value": 70, "color": "yellow"},
              {"value": 85, "color": "green"}
            ]
          }
        }
      },
      "options": {
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      }
    },
    {
      "id": 3,
      "title": "‚è±Ô∏è System Uptime",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "node_time_seconds - node_boot_time_seconds",
          "legendFormat": "Uptime",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "dtdurations",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "red"},
              {"value": 3600, "color": "yellow"},
              {"value": 86400, "color": "green"}
            ]
          }
        }
      },
      "options": {
        "textMode": "value_and_name",
        "graphMode": "none"
      }
    },
    {
      "id": 4,
      "title": "üîÑ Services Status",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "up{job=\"prometheus\"}",
          "legendFormat": "Prometheus",
          "refId": "A"
        },
        {
          "expr": "up{job=\"node-exporter\"}",
          "legendFormat": "Node Exporter",
          "refId": "B"
        },
        {
          "expr": "up{job=\"postgres\"}",
          "legendFormat": "PostgreSQL",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {"type": "value", "value": "0", "text": "‚ùå Down"},
            {"type": "value", "value": "1", "text": "‚úÖ Up"}
          ],
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          }
        }
      },
      "options": {
        "textMode": "value_and_name",
        "graphMode": "none"
      }
    },
    {
      "id": 5,
      "title": "üìä Active DB Connections",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 4},
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "pg_stat_activity_count{datname=\"eivan_pay\",state=\"active\"}",
          "legendFormat": "Active",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 50, "color": "yellow"},
              {"value": 100, "color": "red"}
            ]
          }
        }
      },
      "options": {
        "textMode": "value_and_name",
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "id": 6,
      "title": "üíΩ Database Size",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 4},
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "pg_database_size_bytes{datname=\"eivan_pay\"}",
          "legendFormat": "Size",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 10737418240, "color": "yellow"},
              {"value": 53687091200, "color": "red"}
            ]
          }
        }
      },
      "options": {
        "textMode": "value_and_name",
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "id": 7,
      "title": "üî• CPU Usage Heatmap",
      "type": "heatmap",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "100 - (avg by(cpu) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU {{cpu}}",
          "refId": "A"
        }
      ],
      "options": {
        "calculate": false,
        "cellGap": 2,
        "color": {
          "scheme": "Spectral",
          "fill": "dark-red",
          "mode": "scheme"
        },
        "yAxis": {
          "decimals": 0
        }
      }
    },
    {
      "id": 8,
      "title": "üå°Ô∏è Resource Usage Overview",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU %",
          "refId": "A"
        },
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "Memory %",
          "refId": "B"
        },
        {
          "expr": "(1 - (node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"})) * 100",
          "legendFormat": "Disk %",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "options": {
        "tooltip": {
          "mode": "multi"
        },
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 9,
      "title": "‚ö° Database Transactions/sec",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit{datname=\"eivan_pay\"}[1m])",
          "legendFormat": "‚úÖ Commits",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_xact_rollback{datname=\"eivan_pay\"}[1m])",
          "legendFormat": "‚ùå Rollbacks",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "ops"
        }
      },
      "options": {
        "tooltip": {
          "mode": "multi"
        }
      }
    },
    {
      "id": 10,
      "title": "üíæ Disk I/O Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "rate(node_disk_read_bytes_total[5m])",
          "legendFormat": "üì• Read",
          "refId": "A"
        },
        {
          "expr": "rate(node_disk_written_bytes_total[5m])",
          "legendFormat": "üì§ Write",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "Bps"
        }
      },
      "options": {
        "tooltip": {
          "mode": "multi"
        }
      }
    },
    {
      "id": 11,
      "title": "üåê Network Traffic Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device!=\"lo\"}[5m])",
          "legendFormat": "üì• RX - {{device}}",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{device!=\"lo\"}[5m])",
          "legendFormat": "üì§ TX - {{device}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "Bps"
        }
      },
      "options": {
        "tooltip": {
          "mode": "multi"
        }
      }
    },
    {
      "id": 12,
      "title": "üéØ Top 5 Database Tables by Size",
      "type": "bargauge",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "topk(5, pg_stat_user_tables_pg_total_relation_size{datname=\"eivan_pay\"})",
          "legendFormat": "{{relname}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "bytes"
        }
      },
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient",
        "showUnfilled": true
      }
    },
    {
      "id": 13,
      "title": "üîç Cache Hit Ratio (Last 5min)",
      "type": "gauge",
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 32},
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "100 * (sum(rate(pg_stat_database_blks_hit{datname=\"eivan_pay\"}[5m])) / (sum(rate(pg_stat_database_blks_hit{datname=\"eivan_pay\"}[5m])) + sum(rate(pg_stat_database_blks_read{datname=\"eivan_pay\"}[5m]))))",
          "legendFormat": "Cache Hit %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "red"},
              {"value": 80, "color": "yellow"},
              {"value": 95, "color": "green"}
            ]
          }
        }
      },
      "options": {
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      }
    },
    {
      "id": 14,
      "title": "‚ö†Ô∏è System Load Average",
      "type": "gauge",
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 32},
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "(node_load5 / count(count(node_cpu_seconds_total) by (cpu))) * 100",
          "legendFormat": "Load %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 70, "color": "yellow"},
              {"value": 90, "color": "red"}
            ]
          }
        }
      },
      "options": {
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      }
    },
    {
      "id": 15,
      "title": "üö® Dead Tuples",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 32},
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(pg_stat_user_tables_n_dead_tup{datname=\"eivan_pay\"})",
          "legendFormat": "Dead Tuples",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 1000, "color": "yellow"},
              {"value": 10000, "color": "red"}
            ]
          }
        }
      },
      "options": {
        "textMode": "value_and_name",
        "graphMode": "area",
        "colorMode": "value"
      }
    }
  ]
}
